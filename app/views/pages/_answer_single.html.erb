<div class="question-action-buttons">

<% if (question.answers.length > 0) %>
  <p class="answer-text">
    <%= question.answers[0].value %>
  </p>

<div class="answer-control-buttons-group">  
  <%= button_to "edit", edit_book_page_question_answer_path(page_id: page.id, question_id: question.id, answer_id: question.answers[0].id), class: "answer-control-buttons bg-orange" %> 
  
  <%= button_to "clear", book_page_question_answer_path(page_id: page.id, question_id: question.id, answer_id: question.answers[0].id), class: "answer-control-buttons bg-pink", method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
</div>