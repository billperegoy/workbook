<h1>All Books</h1>

  <%= link_to "Login", login_path %>
  <main>
    <div class="container">	

      <% @books.in_groups_of(4) do |row| %>
        <div class="row">
          <% row.each do |book| %>
            <div class="col-md-3">
              <div class="product-box">
                  <%= image_tag book.thumbnail, :class => "img-responsive product-image" %>
                <caption><%= link_to book.title, book, :class => "product-name"  %></caption>
              </div><!-- end product box-->
            </div><!-- end col-md-3 -->
          <% end %>
        </div> <!-- end row -->
      <% end %>
  </main>








<p> <%= link_to "Create new book", new_book_path %> </p>




